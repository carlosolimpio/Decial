# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~



# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)


POST		/api/entrarRUDinheiro/:cod/:valor/:etr								@controllers.EntradaRUController.entrarRUDinheiro(cod:Long, valor:Int, etr:Int)
GET 	/api/buscarUsuarioCodigo/:cod												@controllers.EntradaRUController.buscarUsuarioCodigo(cod: Long)
GET 	/api/entrarRU/obterFluxo/:dataInicio/:dataFim/:tr				@controllers.EntradaRUController.obterFluxoFaturamentoRUDias(dataInicio:String, dataFim:String, tr:Int)
GET 	/api/entrarRU/obterFluxo/:dataInicio/:dataFim/:horaInicio/:horaFim			@controllers.EntradaRUController.obterFluxoRUHoras(dataInicio:String, dataFim:String, horaInicio:String, horaFim:String)
GET 	/api/entrarRU/listar											@controllers.EntradaRUController.listar()
GET 	/api/entrarRU/listarFluxo/:dataInicio/:dataFim/:horaInicio/:horaFim			@controllers.EntradaRUController.listarPorDatasHoras(dataInicio:String, dataFim:String, horaInicio:String, horaFim:String)
GET 	/api/entrarRU/listarFluxo/:dataInicio/:dataFim/:tr						@controllers.EntradaRUController.listarPorDatasTipo(dataInicio:String, dataFim:String, tr:Int)


